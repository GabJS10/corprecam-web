---
// Importamos el Layout base de Astro y nuestro Header
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import SectionAbout from '../components/SectionAbout.astro';
// ¡Cambia esto por la ruta a tu propia imagen en la carpeta `public/`!
// Ejemplo: const bgImageUrl = "/imagenes/mi-fondo.jpg";
const bgImageUrl = "https://corprecam.com/wp-content/uploads/2023/10/Diseno-sin-titulo-2023-10-03T100736.251.png";
---

<Layout title="Corprecam E.S.P" >
  <div class="relative min-h-screen flex flex-col justify-center items-center overflow-hidden">
    
    <!-- Imagen de fondo -->
    <div 
      class="absolute inset-0 bg-cover bg-center scale-105 animate-[fade-in-down_1s_ease-out]" 
      style={`background-image: url(${bgImageUrl});`}
    ></div>
    
    <!-- Capa de opacidad -->
    <div class="absolute inset-0 bg-black/60"></div>
    
		<Header />
    <!-- Contenido -->
    <div class="relative z-20 text-center px-4 max-w-3xl animate-fade-in-up">
      <h1 class="text-5xl md:text-5xl font-extrabold mb-6 text-white drop-shadow-lg">
        Dignificamos la labor del reciclador de oficio
      </h1>
      <p class="text-lg md:text-xl text-gray-200 mb-8">
        Promovemos la educación y conciencia ciudadana sobre la importancia de reciclar y manejar adecuadamente los residuos.
      </p>
      <a href="#section-about" 
         class="bg-green-600 text-white font-semibold py-3 px-10 rounded-full shadow-lg hover:scale-105 hover:bg-green-700 transition-transform duration-300">
         Conoce Más
      </a>
    </div>
  </div>

  <SectionAbout />
  
</Layout>
