---
// Importamos el Layout base de Astro y nuestro Header
import Layout from '../layouts/Layout.astro';
import SectionAbout from '../components/SectionAbout.astro';
import MidSection from '../sections/MidSection.astro';
import Allies from '../components/Allies.astro'
// ¡Cambia esto por la ruta a tu propia imagen en la carpeta `public/`!
// Ejemplo: const bgImageUrl = "/imagenes/mi-fondo.jpg";
import Hero from '../components/Hero.astro';


const bgImageUrl = "https://corprecam.com/wp-content/uploads/2023/10/Diseno-sin-titulo-2023-10-03T100736.251.png";
---

<Layout title="Corprecam E.S.P" >

  <Hero bgImageUrl={bgImageUrl} titleHero='Dignificamos la labor del reciclador de oficio' descriptionHero='Promovemos la educación y conciencia ciudadana sobre la importancia de reciclar y manejar adecuadamente los residuos. ' textButton="Conoce mas" hrefButton='#section-about' />

  <SectionAbout />
  
  <MidSection/>

  <Allies/>


  <section 
  class="relative flex flex-col items-center justify-center min-h-[80vh] px-6 text-center overflow-hidden"
>
  <!-- Fondo animado -->
  <div class="absolute inset-0 bg-linear-gradient from-green-200 via-white to-green-300 animate-gradientMove blur-2xl"></div>

  <!-- Capa extra con manchas borrosas -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-32 -left-20 w-96 h-96 bg-green-400/40 rounded-full blur-3xl animate-float-slow"></div>
    <div class="absolute bottom-0 right-0 w-[28rem] h-[28rem] bg-green-600/30 rounded-full blur-3xl animate-float-reverse"></div>
  </div>

  <!-- Contenido -->
  <div class="relative z-10 max-w-2xl">
    <p class="text-gray-800 text-lg md:text-xl mb-8 font-medium" data-aos="fade-up">
      Conoce más sobre nuestra gestión social en
      <a href="/nuestra-gestion" class="text-green-700 font-semibold hover:underline hover:text-green-800 transition-colors duration-300">
        Nuestra gestión
      </a>
    </p>

    <a 
      href="/contacto"
      class="inline-block px-8 py-3 border-2 border-green-700 text-green-700 font-semibold rounded-xl hover:bg-green-700 hover:text-white transition-all duration-300 shadow-md hover:shadow-green-400/40"
      data-aos="zoom-in"
    >
      ¡Contáctanos!
    </a>
  </div>

  <!-- Animaciones -->
  </section>



</Layout>
