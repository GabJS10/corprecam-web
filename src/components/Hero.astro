---
import Header from './Header.astro';

interface Props {
  bgImageUrl: string
  titleHero: string
  descriptionHero: string
  textButton: string
  hrefButton: string
}


const { bgImageUrl, titleHero, descriptionHero, textButton, hrefButton } = Astro.props;

---

<div class="relative min-h-screen flex flex-col justify-center items-center overflow-hidden">
    
    <!-- Imagen de fondo -->
    <div 
      class="absolute inset-0 bg-cover bg-center scale-105 animate-[fade-in-down_1s_ease-out]" 
      style={`background-image: url(${bgImageUrl});`}
    ></div>
    
    <!-- Capa de opacidad -->
    <div class="absolute inset-0 bg-black/60"></div>
    
		<Header />
    <!-- Contenido -->
    <div class="relative z-20 text-center px-4 max-w-3xl animate-fade-in-up">
      <h1 class="text-5xl md:text-5xl font-extrabold mb-6 text-white drop-shadow-lg">
        {titleHero}
      </h1>
      <p class="text-lg md:text-xl text-gray-200 mb-8">
        {descriptionHero}
      </p>
      <a href={hrefButton} 
         class="bg-green-600 text-white font-semibold py-3 px-10 rounded-full shadow-lg hover:scale-105 hover:bg-green-700 transition-transform duration-300">
        {textButton}
      </a>
    </div>
  </div>

