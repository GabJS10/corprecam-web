---
import alimentosImage from "../assets/alimentos.png";
import asoreImage from "../assets/asore.png";
import fuenteImage from "../assets/fuente.png";
import fundacionImage from "../assets/fundacion.png";
import padfImage from "../assets/padf.png";
import papelesImage from "../assets/papeles.png";
import superserviciosImage from "../assets/superservicios.jpg";
const logosFila1 = [
 fundacionImage.src,
alimentosImage.src,
  asoreImage.src,
  fuenteImage.src,
];
const logosFila2 = [
  padfImage.src,
  papelesImage.src,
  superserviciosImage.src,

];
---

<section class="bg-linear-to-t py-12 overflow-hidden ">
  <h2 class="text-5xl font-bold text-center text-green-700 mb-8">
    Nuestros Aliados
  </h2>

  <!-- Fila 1 -->
  <div class="relative w-full overflow-hidden">
    <div class="flex animate-scroll">
      {logosFila1.concat(logosFila1).map((logo, i) => (
        <div class="flex-shrink-0 w-60 h-40 flex items-center justify-center p-4 mx-5">
          <img src={logo} alt="logo" class="object-contain h-full" />
        </div>
      ))}
    </div>
  </div>

  <!-- Fila 2 -->
  <div class="relative w-full overflow-hidden mt-6">
    <div class="flex animate-scroll-reverse">
      {logosFila2.concat(logosFila2).map((logo, i) => (
        <div class="flex-shrink-0 w-60 h-40 flex items-center justify-center p-4 mx-10" >
          <img src={logo} alt="logo" class="object-contain h-full" />
        </div>
      ))}
    </div>
  </div>
</section>
