---
const { img, text } = Astro.props;
---

<div
  class="bg-transparent rounded-2xl p-4 flex flex-col items-center text-center hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
  data-aos="fade-up"
>
  <div class="w-full aspect-square overflow-hidden rounded-xl">
    <img
      src={img}
      alt={text}
      loading="lazy"
      class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
    />
  </div>
  <p class="mt-4 text-green-900 font-medium text-base">{text}</p>
</div>
